<!--
#index number of / joy.buttons:
#0 - A
#1 - B
#2 - X
#3 - Y
#4 - LB
#5 - RB
#6 - back
#7 - start
#8 - power
#9 - Button stick left
#10 - Button stick right

#index number of / joy.axis:
#0 - Left / Right Axis stick left
#1 - Up / Down Axis stick left
#2 - LT
#3 - Left / Right Axis stick right
#4 - Up / Down Axis stick right
#5 - RT
#6 - cross key left / right
#7 - cross key up / down
-->

<ControlScheme>
    <button target="A" index="0"/>
    <button target="B" index="1"/>
    <button target="X" index="2"/>
    <button target="Y" index="3"/>
    <button target="LB" index="4"/>
    <button target="RB" index="5"/>
    <button target="back" index="6"/>
    <button target="start" index="7"/>

    <axis target="LR left stick" index="0"/>
    <axis target="UD left stick" index="1"/>
    <axis target="LT" index="2"/>
    <axis target="LR right stick" index="3"/>
    <axis target="UD right stick" index="4"/>
    <axis target="RT" index="5"/>
    <axis target="LR Dpad" index="6"/>
    <axis target="UD Dpad" index="7"/>
</ControlScheme>