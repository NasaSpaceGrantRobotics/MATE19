<!--
#index number of / joy.buttons:
#0 - A
#1 - B
#2 - X
#3 - Y
#4 - LB
#5 - RB
#6 - back
#7 - start
#8 - power
#9 - Button stick left
#10 - Button stick right

#index number of / joy.axis:
#0 - Left / Right Axis stick left
#1 - Up / Down Axis stick left
#2 - LT
#3 - Left / Right Axis stick right
#4 - Up / Down Axis stick right
#5 - RT
#6 - cross key left / right
#7 - cross key up / down
-->

<ControlScheme>
    <button target="A" name="A"/>
    <button target="switch" name="B"/>
    <button target="light" name="X"/>
    <button target="Y" name="Y"/>
    <button target="LB" name="LB"/>
    <button target="RB" name="RB"/>
    <button target="Back" name="Back"/>
    <button target="Start" name="Start"/>
    <button target="LeftStick" name = "LeftStick"/>
    <button target="RightStick" name = "RightStick"/>

    <axis target="trans_x" name="LeftStickX"/>
    <axis target="trans_y" name="LeftStickY"/>
    <axis target="trans_z" name="LeftTrigger"/>
    <axis target="rot_x" name="RightStickX"/>
    <axis target="rot_y" name="RightStickY"/>
    <axis target="rot_z" name="RightTrigger"/>
    <axis target="LR Dpad" name="DpadX"/>
    <axis target="UD Dpad" name="DpadY"/>
</ControlScheme>
